<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root fx:id="root" prefHeight="80.0" prefWidth="250.0" stylesheets="/components/planningdetails/planningDetailsItem.css" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1">
   <GridPane AnchorPane.rightAnchor="8" AnchorPane.topAnchor="8" AnchorPane.leftAnchor="8" AnchorPane.bottomAnchor="8">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Label text="${controller.waypointName}" GridPane.columnIndex="0" GridPane.rowIndex="0" />
         <Label text="Coordinates" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
         <Label text="${controller.coordinates}" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      </children>
   </GridPane>
  <Button fx:id="edit" onAction="#onEditButtonAction" graphicTextGap="2.0" mnemonicParsing="false" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="8">
    <graphic>
      <FontIcon iconLiteral="gmi-edit" scaleX="0.75" scaleY="0.75" />
    </graphic>
  </Button>
  <Button fx:id="remove" onAction="#onRemoveButtonAction" graphicTextGap="2.0" mnemonicParsing="false" AnchorPane.rightAnchor="8" AnchorPane.topAnchor="8">
    <graphic>
      <FontIcon iconLiteral="gmi-clear" />
    </graphic>
  </Button>
</fx:root>
