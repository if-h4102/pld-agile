<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import components.timefield.TimeField?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" fx:id="root" prefHeight="80.0" prefWidth="250.0"
         stylesheets="/components/waypointcard/DeliveryAddressCard.css" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.102-ea">
  <VBox AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
    <Label text="${controller.name}"/>
    <HBox>
      <Label text="Coordinates"/>
      <Label text="${controller.coordinates}"/>
    </HBox>
    <AnchorPane fx:id="timeConstraints" managed="false" visible="false">
      <GridPane AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
          <Label text="Time constraint start" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
          <TimeField time="${controller.waypoint.timeStart}" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
          <Label text="Time constraint end" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
          <TimeField time="${controller.waypoint.timeEnd}" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </children>
      </GridPane>
    </AnchorPane>
  </VBox>
  <AnchorPane AnchorPane.rightAnchor="8" AnchorPane.topAnchor="8">
    <HBox alignment="TOP_RIGHT" fx:id="cornerControls">
    </HBox>
  </AnchorPane>
</fx:root>
